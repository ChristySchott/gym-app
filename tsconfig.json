{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "es2022",
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": "./",
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "compileOnSave": true,
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/*.spec.ts"
  ],
}